<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/start_activity_layout"
    android:layout_height="match_parent"
    android:background="@color/dark_red">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/start_activity_container"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/start_center_emtpy_activity_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/empty_logo_white"/>

        <ImageView
            android:id="@+id/start_activity_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:src="@drawable/logo_white"/>
        <ProgressBar
            android:id="@+id/start_activity_progressDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            style="?android:progressBarStyleLarge"/>
    </FrameLayout>

</LinearLayout>